<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- Text Header. -->

    <style name="TextAppearance.Header.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/textColorHeaderDark</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.Header.Title.2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/textColorHeaderDark</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <!-- Text Input. -->
    <style name="TextEdit.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColorPrimaryLight</item>
    </style>

    <style name="TextEdit.Text.2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColorHeaderDark</item>
    </style>

    <style name="TextEdit.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextEdit.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="passwordToggleTint">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/textColorPrimaryLight</item>
    </style>

    <style name="TextEdit.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/textColorPrimaryLight</item>
    </style>

    <style name="TextEdit.TextInputLayout.2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextEdit.TextInputLayout.HintText.2</item>
    </style>

    <style name="TextEdit.TextInputLayout.HintText.2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/textColorHeaderDark</item>
    </style>

    <!-- Button. -->

    <style name="Widget.Apps.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.Apps.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Toolbar. -->
    <style name="Widget.Apps.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
</resources>
